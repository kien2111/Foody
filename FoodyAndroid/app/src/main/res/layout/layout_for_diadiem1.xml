<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="15">
    <LinearLayout
        android:layout_weight="1"
        android:background="@drawable/shapeheaderlistview"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dip">
        <TextView
            android:id="@+id/nameofcity1"
            android:textStyle="bold"
            android:textSize="17dip"
            android:textColor="@color/colorNavbar"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ahihi"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <LinearLayout
                android:id="@+id/btn_change_province1"
                android:layout_marginTop="6dip"
                android:layout_marginRight="5dip"
                android:background="#e7e7e7"
                android:layout_width="150dip"
                android:layout_height="26dip">
                <ImageView
                    android:layout_marginLeft="4dip"
                    android:layout_marginTop="6dip"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:background="@drawable/ic_change_city"/>
                <TextView
                    android:layout_marginLeft="9dip"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ĐỔI TỈNH THÀNH"
                    android:layout_marginTop="6dip"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ExpandableListView
        android:layout_weight="13"
        android:scrollbars="vertical"
        android:background="@color/colorofbackgroundfragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/expandlistviewdiadiem1"
        android:dividerHeight="2px"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true">
    </ExpandableListView>
    <Button
        android:layout_weight="1"
        android:id="@+id/btnHuy3"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:textAllCaps="false"
        android:background="@color/white"
        android:text="Hủy bỏ"
        android:layout_height="wrap_content" />
</LinearLayout>