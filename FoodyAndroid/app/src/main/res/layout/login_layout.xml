<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainlayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/tutorial3">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_of_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetEnd="0dp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <Button
            android:layout_width="30.0dip"
            android:id="@+id/back_button"
            android:layout_height="30dp"
            android:background="@drawable/ic_back_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập foody"
            android:layout_marginLeft="30dip"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/foody_title" />

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/include_layout_login_with_email"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <include
            android:layout_width="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_height="match_parent"
            layout="@layout/include_layout_login_with_email"
            ></include>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_container"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:weightSum="4"
                android:layout_weight="1"
                android:layout_margin="6dip"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_right_facebook"></View>
                    <ImageView
                        android:layout_margin="4dip"
                        android:padding="5dip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:src="@drawable/facebook_icon"
                        />
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:background="@color/facebook_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Facebook"
                        android:padding="6dip"
                        android:textSize="@dimen/text_size_of_login_layout"
                        android:textColor="@color/white"
                        />
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:weightSum="4"
                android:layout_margin="6dip"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_right_google"></View>
                    <ImageView
                        android:layout_margin="4dip"
                        android:padding="5dip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:src="@drawable/google_icon"
                        />
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:background="@color/google_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Google"
                        android:padding="6dip"
                        android:textSize="@dimen/text_size_of_login_layout"
                        android:textColor="@color/white"
                        />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:weightSum="4"
                android:layout_margin="6dip"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_right_yahoo"></View>
                    <ImageView
                        android:layout_margin="4dip"
                        android:padding="5dip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:src="@drawable/yahoo_icon"
                        />
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:background="@color/yahoo_color"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Yahoo"
                        android:padding="6dip"
                        android:textSize="@dimen/text_size_of_login_layout"
                        android:textColor="@color/white"
                        />
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:weightSum="4"
                android:layout_margin="6dip"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_right_twitter"></View>
                    <ImageView
                        android:layout_margin="4dip"
                        android:padding="5dip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:src="@drawable/twitter_icon"
                        />
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:background="@color/twitter_color"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Twitter"
                        android:padding="6dip"
                        android:textSize="@dimen/text_size_of_login_layout"
                        android:textColor="@color/white"
                        />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/login_phonenumber_btn"
            android:layout_margin="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập với số điện thoại"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@color/transparentforbtn"/>

        <Button
            android:id="@+id/show_include_login_email"
            android:layout_margin="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập với Email"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@color/transparentforbtn"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:textColor="@color/white"
            android:text="Chúng tôi sẽ không sử dụng thông tin của bạn với bất kỳ mục đích nào khác"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:textSize="20dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dip"
            android:textColor="@color/white"
            android:text="Đăng ký"
            android:textAlignment="center"/>
    </LinearLayout>

</LinearLayout>